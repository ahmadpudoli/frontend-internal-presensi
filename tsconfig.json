{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ],
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*",
    "__tests__/**/*"
  ],
  "extends": "./tsconfig.base.json",
  "exclude": [
    "node_modules"
  ]
}
